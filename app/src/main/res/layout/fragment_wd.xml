<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="207dp"
        android:background="@mipmap/mine_profile_bg">

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="32dp"
            android:layout_marginRight="15dp"
            android:padding="5dp"
            android:src="@mipmap/mine_profile_nav_icon_set" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_user"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/iv_setting"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            android:src="@mipmap/mine_image_user"
            app:riv_border_width="2dp"
            app:riv_oval="true"
            app:riv_border_color="@color/white"/>


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_user"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="咸鱼小姐的猫"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingHorizontal="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/mine_profile_icon_order"
            android:drawablePadding="5dp"
            android:text="我的订单"
            android:textColor="@color/text_333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_order"
            android:drawableRight="@mipmap/mine_more"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="我的订单"
            android:textColor="@color/text_aaa"
            android:textSize="12sp" />
    </RelativeLayout>

    <include layout="@layout/layout_line_f7_1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/ll_wait_pay"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="37dp"
                android:layout_height="35dp"
                android:src="@mipmap/mine_profile_icon_dzf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="待付款"
                android:textColor="@color/text_333"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wait_goods"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="46dp"
                android:layout_height="48dp">

                <ImageView
                    android:layout_width="39dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="7dp"
                    android:src="@mipmap/mine_profile_icon_dfh" />

                <Button
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_radius_stoke_13"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.5dp"
                android:text="待发货"
                android:textColor="@color/text_333"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wait_rece_goods"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="49dp">

                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="7dp"
                    android:src="@mipmap/mine_profile_icon_dsh" />

                <Button
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_radius_stoke_13"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.5dp"
                android:text="待收货"
                android:textColor="@color/text_333"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wait_evaluate"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="35dp"
                android:src="@mipmap/mine_profile_icon_dpj" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="待评价"
                android:textColor="@color/text_333"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_refund"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@mipmap/mine_profile_icon_th" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="退货/退款"
                android:textColor="@color/text_333"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/layout_line_f7_10" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingHorizontal="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/mine_profile_icon_qb"
            android:drawablePadding="5dp"
            android:text="我的钱包"
            android:textColor="@color/text_333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_wallet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/mine_more"
            android:drawablePadding="18dp"
            android:gravity="center"
            android:text="￥50"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />
    </RelativeLayout>

    <include layout="@layout/layout_line_f7_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/ll_convert"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:src="@mipmap/mine_profile_icon_wddh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="我的兑换"
                android:textColor="@color/text_333"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="29dp"
                android:src="@mipmap/mine_profile_icon_wdsc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="我的收藏"
                android:textColor="@color/text_333"
                android:textSize="13sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_pug"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="30dp"
                android:src="@mipmap/mine_profile_icon_wdzj" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="我的足迹"
                android:textColor="@color/text_333"
                android:textSize="13sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_assess"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="24dp"
                android:src="@mipmap/mine_profile_icon_wdpj" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="我的评价"
                android:textColor="@color/text_333"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/ll_check_in"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@mipmap/mine_prodile_icon_qd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="签到"
                android:textColor="@color/text_333"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_help"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="27dp"
                android:src="@mipmap/mine_profile_icon_bzzx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="帮助中心"
                android:textColor="@color/text_333"
                android:textSize="13sp" />

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />
    </LinearLayout>


</LinearLayout>