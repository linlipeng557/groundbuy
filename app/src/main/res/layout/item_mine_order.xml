<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="221dp"
    android:layout_marginTop="15dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:paddingHorizontal="15dp">

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="10dp"
            android:text="天天包你开心店"
            android:textColor="@color/text_333"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/tv_shop_name"
            android:src="@mipmap/mine_more" />


        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="交易关闭"
            android:textColor="@color/text_333"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <include layout="@layout/layout_line_f7_1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_user"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/test_head"
            app:riv_corner_radius="4dp"
            app:riv_oval="false" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_user"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="MISSHTH真皮小包女包2019新款时尚韩版发射点法大师傅发大水发射点发射点发百搭"
            android:textColor="#ff444444"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_sku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_user"
            android:text="红色，A款"
            android:textColor="#ff888888"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="1件商品正在售后"
            android:textColor="#ffed1731"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_user"
            android:text="¥1104"
            android:textColor="#ffed1731"
            android:textSize="15sp" />

        <TextView

            android:id="@+id/tv_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/tv_price"
            android:text="¥2000"
            android:textColor="@color/text_bbb"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="x1"
            android:textColor="#ff888888"
            android:textSize="13sp" />

    </RelativeLayout>


    <include layout="@layout/layout_line_f7_1_margin_15" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp">

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共1件商品   合计"
            android:textColor="@color/text_333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_totoel_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="¥1104"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/tv_black_left"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_black_stoke_radius"
            android:gravity="center"
            android:minWidth="64dp"
            android:paddingHorizontal="5dp"
            android:text="删除订单"
            android:textColor="@color/text_333"
            android:textSize="13sp"
            android:visibility="visible" />


        <TextView
            android:id="@+id/tv_black_center"
            android:layout_width="64dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_black_stoke_radius"
            android:gravity="center"
            android:text="查看评价"
            android:textColor="@color/text_333"
            android:textSize="13sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_red"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/shape_stoke_primary_radius"
            android:gravity="center"
            android:minWidth="64dp"
            android:paddingHorizontal="5dp"
            android:text="评价"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>