<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.groundbuy.mine_model.widgets.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerTitle="地址管理" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="收货人："
            android:textColor="@color/text_333"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:background="@color/white"
            android:hint="请输入您的名字"
            android:textColor="@color/text_333"
            android:textSize="14sp" />

    </RelativeLayout>

    <include layout="@layout/layout_line_f7_1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手机号码："
            android:textColor="@color/text_333"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:background="@color/white"
            android:hint="请输入您的手机号码"
            android:textColor="@color/text_333"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:textSize="14sp" />
    </RelativeLayout>

    <include layout="@layout/layout_line_f7_1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="收货地址："
            android:textColor="@color/text_333"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_simple_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/mine_right_back"
            android:drawablePadding="10dp"
            android:hint="请选择您的收货地址"
            android:textColor="@color/text_333"
            android:textSize="14sp" />
    </RelativeLayout>

    <include layout="@layout/layout_line_f7_1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="详细地址："
            android:textColor="@color/text_333"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/et_details_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:background="@color/white"
            android:hint="请填写详细地址，如街道，楼牌号等"
            android:textColor="@color/text_333"
            android:textSize="14sp" />
    </RelativeLayout>

    <include layout="@layout/layout_line_f7_1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="设为默认："
            android:textColor="@color/text_333"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/chb_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selcet_address_switch"
            android:button="@null" />

    </RelativeLayout>

    <include layout="@layout/layout_line_f7_1" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/shape_selector_radius_5_fffc003b"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>